{
    "name": "Hashword",
    "version": "0.5.1",
    "manifest_version": 2,
    "description": "Generate a unique, secure password for every web site from one master password.",
    "background": {
        "scripts": ["app/rules.js", "app/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Hashword",
        "default_popup": "popup.html",
        "default_icon": {
            "19": "images/icon19-inactive.png",
            "38": "images/icon38-inactive.png"
        }
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            }
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "incognito": "spanning",
    "minimum_chrome_version": "40",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "declarativeContent",
        "storage"
    ]
}
