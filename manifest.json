{
    "name": "Hashword",
    "version": "0.2.0",
    "manifest_version": 2,
    "description": "Generate reproducible hashed passwords",
    "background": {
        "scripts": ["lib/sha3.js", "lib/enc-base64-min.js", "lib/tld.js", "background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Insert Password",
        "default_popup": "popup.html",
        "default_icon": {
            "19": "images/icon19.png"
        }
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            }
        }
    },
    "incognito": "spanning",
    "minimum_chrome_version": "26",
    "permissions": [
        "activeTab",
        "storage"
    ]
}
